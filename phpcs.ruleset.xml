<?xml version="1.0"?>
<ruleset>

    <config name="installed_paths" value="vendor/humanmade/coding-standards,vendor/wp-coding-standards/wpcs,vendor/fig-r/psr2r-sniffer" />

    <arg value="sv"/>
    <arg name="extensions" value="php"/>
    <arg name="basepath" value="."/>
    <arg name="parallel" value="8"/>

    <!-- Use HM Coding Standards -->
    <rule ref="vendor/humanmade/coding-standards">
        <!-- Don't restrict namespaced functions to `namespace.php` -->
        <exclude name="HM.Files.FunctionFileName" />

        <!-- Temporary: Exclude commented out code sniff, as it leads to false positives. -->
        <exclude name="Squiz.PHP.CommentedOutCode" />
    </rule>

    <!-- Require proper docblocks be used in all PHP files -->
    <rule ref="WordPress-Docs" />

    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/.tests/*</exclude-pattern>

</ruleset>
